        "protected_settings": {
            "value": {
                "storageAccountName": "<storage account with script>",
                "storageAccountKey": "<storage account key>"
            }
        },
        "ssh_key_data": {
            "value": "ssh-rsa LOL"
        },
        "admin_username": {
